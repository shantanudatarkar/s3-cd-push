pipeline {
    agent any

    stages {
        stage('Deploy to UAT') {
            environment {
                S3_BUCKET_NAME = "uat.shan-infra" // Replace with your UAT S3 bucket name
            }
            steps {
                script {
                    // Add deployment steps for the UAT environment
                    sh "aws s3 cp index.html s3://${S3_BUCKET_NAME}/index.html"
                }
            }
        }
    }
}