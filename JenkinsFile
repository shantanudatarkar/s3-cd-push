pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Deploy to Dev') {
            when {
                expression { BRANCH_NAME == 'dev' }
            }
            environment {
                S3_BUCKET_NAME = "dev-shan-infra" // Replace with your dev S3 bucket name
            }
            steps {
                script {
                    // Add deployment steps for the dev environment
                    sh "aws s3 cp index.html s3://${S3_BUCKET_NAME}/index.html"
                }
            }
        }

        stage('Deploy to UAT') {
            when {
                expression { BRANCH_NAME == 'uat' }
            }
            environment {
                S3_BUCKET_NAME = "uat-shan-infra" // Replace with your UAT S3 bucket name
            }
            steps {
                script {
                    // Add deployment steps for the UAT environment
                    sh "aws s3 cp index.html s3://${S3_BUCKET_NAME}/index.html"
                }
            }
        }

        stage('Deploy to Prod') {
            when {
                expression { BRANCH_NAME == 'prod' }
            }
            environment {
                S3_BUCKET_NAME = "prod-shan-infra" // Replace with your prod S3 bucket name
            }
            steps {
                script {
                    // Add deployment steps for the prod environment
                    sh "aws s3 cp index.html s3://${S3_BUCKET_NAME}/index.html"
                }
            }
        }
    }
}